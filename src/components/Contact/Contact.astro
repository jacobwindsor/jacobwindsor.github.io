---
import SectionHeading from '../SectionHeading/SectionHeading';
import SocialButtons from '../SocialButtons/SocialButtons';
---

<SectionHeading heading="Contact" />
<div class="contact-content">
  <a href="mailto:me@jcbwndsr.com" class="contact-button">Start a conversation</a>
  <SocialButtons />
</div>

<style>
  .contact-content {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  .contact-button {
    padding: 1rem 2rem;
    background: #d93425;
    color: white;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 500;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    display: inline-block;
  }

  .contact-button:hover {
    background: #b82a1d;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(217, 52, 37, 0.4);
  }
</style>

