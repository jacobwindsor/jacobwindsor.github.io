---
import { Button } from '@/components/ui/button';
import { ArrowDown, Mail, Github, Linkedin } from 'lucide-react';
import profile from './images/profile.webp';
import profileJpg from './images/profile.jpg';
---

<section class="relative min-h-screen flex items-center justify-center px-6 py-20 lg:px-8 overflow-hidden bg-background">
  <div class="container mx-auto max-w-6xl relative z-10">
    <div class="flex flex-col lg:flex-row items-center gap-14 lg:gap-16">
      <!-- Profile Image - Professional and clean -->
      <div class="relative flex-shrink-0">
        <div class="relative w-56 h-56 lg:w-64 lg:h-64 rounded-md border border-border/50 overflow-hidden bg-card">
          <picture>
            <source srcset={profile.src} type="image/webp" />
            <img 
              src={profileJpg.src}
              alt="Jacob Windsor"
              class="w-full h-full object-cover"
            />
          </picture>
        </div>
      </div>

      <!-- Content -->
      <div class="flex-1 text-center lg:text-left space-y-7">
        <div class="space-y-4">
          <div>
            <h1 class="text-5xl lg:text-6xl font-semibold tracking-tight text-foreground mb-3">
              Jacob Windsor
            </h1>
            <div class="inline-flex items-center px-4 py-1.5 bg-primary/10 border border-primary/20 rounded-md">
              <p class="text-sm font-medium text-primary">Technical Leader · Life Sciences</p>
            </div>
          </div>
        </div>

        <p class="text-lg lg:text-xl text-muted-foreground leading-relaxed max-w-2xl mx-auto lg:mx-0 font-light">
          Leading engineering teams to build scalable platforms that enable groundbreaking research in genomics and bioinformatics.
        </p>

        <div class="flex flex-wrap items-center gap-2.5 justify-center lg:justify-start pt-1">
          <Button size="lg" className="px-7" asChild>
            <a href="#contact">
              <Mail client:load className="mr-2 h-4 w-4" />
              Contact
            </a>
          </Button>
          <Button size="lg" variant="outline" className="px-7" asChild>
            <a href="#experience">
              View Experience
              <ArrowDown client:load className="ml-2 h-4 w-4" />
            </a>
          </Button>
        </div>

        <!-- Social Links - More subtle -->
        <div class="flex items-center gap-3 justify-center lg:justify-start pt-5 border-t border-border/50">
          <a 
            href="https://www.linkedin.com/in/jcbwndsr/" 
            target="_blank" 
            rel="noopener noreferrer"
            class="group flex items-center gap-2 text-muted-foreground hover:text-primary transition-colors text-sm font-medium"
            aria-label="LinkedIn"
          >
            <Linkedin client:load className="w-4 h-4" />
            <span>LinkedIn</span>
          </a>
          <span class="text-muted-foreground/30">·</span>
          <a 
            href="https://github.com/jacobwindsor" 
            target="_blank" 
            rel="noopener noreferrer"
            class="group flex items-center gap-2 text-muted-foreground hover:text-primary transition-colors text-sm font-medium"
            aria-label="GitHub"
          >
            <Github client:load className="w-4 h-4" />
            <span>GitHub</span>
          </a>
          <span class="text-muted-foreground/30">·</span>
          <a 
            href="mailto:me@jcbwndsr.com"
            class="group flex items-center gap-2 text-muted-foreground hover:text-primary transition-colors text-sm font-medium"
            aria-label="Email"
          >
            <Mail client:load className="w-4 h-4" />
            <span>Email</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Subtle scroll indicator -->
    <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2">
      <ArrowDown client:load className="w-4 h-4 text-muted-foreground/40" />
    </div>
  </div>
</section>

