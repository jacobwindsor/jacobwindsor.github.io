---
import { Button } from '@/components/ui/button';
import { ArrowDown, Mail, Github, Linkedin } from 'lucide-react';
import profile from './images/profile.webp';
import profileJpg from './images/profile.jpg';
---

<section class="relative min-h-screen flex items-center justify-center px-4 py-20 overflow-hidden">
  <!-- Background gradient -->
  <div class="absolute inset-0 bg-gradient-to-b from-primary/5 via-transparent to-transparent"></div>
  
  <!-- Animated grid pattern -->
  <div class="absolute inset-0 opacity-20">
    <div class="absolute inset-0" style="background-image: linear-gradient(rgba(255,255,255,0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,0.1) 1px, transparent 1px); background-size: 50px 50px;"></div>
  </div>

  <div class="container mx-auto max-w-5xl relative z-10">
    <div class="flex flex-col lg:flex-row items-center gap-12 lg:gap-16">
      <!-- Profile Image -->
      <div class="relative flex-shrink-0">
        <div class="absolute inset-0 bg-primary/20 blur-3xl rounded-full animate-pulse"></div>
        <div class="relative w-64 h-64 lg:w-80 lg:h-80 rounded-2xl border-4 border-primary/30 overflow-hidden shadow-2xl ring-4 ring-primary/20 bg-gradient-to-br from-primary/10 to-primary/5">
          <picture>
            <source srcset={profile.src} type="image/webp" />
            <img 
              src={profileJpg.src}
              alt="Jacob Windsor"
              class="w-full h-full object-cover"
            />
          </picture>
        </div>
      </div>

      <!-- Content -->
      <div class="flex-1 text-center lg:text-left space-y-6">
        <div class="space-y-4">
          <h1 class="text-5xl lg:text-7xl font-bold tracking-tight text-foreground">
            <span class="bg-gradient-to-r from-white via-foreground to-foreground/90 bg-clip-text text-transparent">
              Jacob Windsor
            </span>
          </h1>
          <div class="inline-block px-4 py-2 rounded-full bg-primary/10 border border-primary/20">
            <p class="text-lg font-semibold text-primary">Technical Leader</p>
          </div>
        </div>

        <p class="text-xl lg:text-2xl text-muted-foreground leading-relaxed max-w-2xl mx-auto lg:mx-0">
          Building scalable engineering solutions for life sciences. 
          <span class="text-foreground font-medium">Years of experience</span> transforming scientific challenges into robust, maintainable systems.
        </p>

        <div class="flex flex-wrap items-center gap-4 justify-center lg:justify-start">
          <Button size="lg" className="text-lg px-8" asChild>
            <a href="#contact">
              <Mail client:load className="mr-2 h-5 w-5" />
              Get in Touch
            </a>
          </Button>
          <Button size="lg" variant="outline" className="text-lg px-8" asChild>
            <a href="#experience">
              View Experience
              <ArrowDown client:load className="ml-2 h-5 w-5" />
            </a>
          </Button>
        </div>

        <!-- Social Links -->
        <div class="flex items-center gap-4 justify-center lg:justify-start pt-4">
          <a 
            href="https://github.com/jacobwindsor" 
            target="_blank" 
            rel="noopener noreferrer"
            class="group flex items-center justify-center w-12 h-12 rounded-lg bg-secondary/50 hover:bg-secondary border border-border transition-all hover:scale-110 hover:border-primary/50"
            aria-label="GitHub"
          >
            <Github client:load className="w-5 h-5 text-foreground/70 group-hover:text-primary transition-colors" />
          </a>
          <a 
            href="https://www.linkedin.com/in/jcbwndsr/" 
            target="_blank" 
            rel="noopener noreferrer"
            class="group flex items-center justify-center w-12 h-12 rounded-lg bg-secondary/50 hover:bg-secondary border border-border transition-all hover:scale-110 hover:border-primary/50"
            aria-label="LinkedIn"
          >
            <Linkedin client:load className="w-5 h-5 text-foreground/70 group-hover:text-primary transition-colors" />
          </a>
          <a 
            href="mailto:me@jcbwndsr.com"
            class="group flex items-center justify-center w-12 h-12 rounded-lg bg-secondary/50 hover:bg-secondary border border-border transition-all hover:scale-110 hover:border-primary/50"
            aria-label="Email"
          >
            <Mail client:load className="w-5 h-5 text-foreground/70 group-hover:text-primary transition-colors" />
          </a>
        </div>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <ArrowDown client:load className="w-6 h-6 text-muted-foreground" />
    </div>
  </div>
</section>

