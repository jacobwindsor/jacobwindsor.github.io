---
interface Props {
  title?: string;
  description?: string;
}

const { title = "Jacob Windsor", description = "Jacob Windsor | Software Engineer. Making science easier, faster, and more accessible." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#000000" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" href="/logo192.png" />
    <link rel="manifest" href="/manifest.json" />
    <link
      rel="preload"
      as="font"
      href="https://fonts.googleapis.com/css?family=Roboto:300,400,500"
      crossorigin="anonymous"
    />
    <meta name="robots" content="index, follow" />
    <title>{title}</title>
    <slot name="head" />
  </head>
  <body>
    <slot />
    <!-- Simple analytics tracking -->
    <script
      async
      defer
      src="https://scripts.simpleanalyticscdn.com/latest.js"
    ></script>
    <noscript
      ><img src="https://queue.simpleanalyticscdn.com/noscript.gif" alt=""
    /></noscript>
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen",
      "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue",
      sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    background: linear-gradient(135deg, #0a1128 0%, #0f1b3d 50%, #021226 100%);
    background-attachment: fixed;
    color: #ffffff;
    overflow-x: hidden;
  }

  code {
    font-family: source-code-pro, Menlo, Monaco, Consolas, "Courier New",
      monospace;
  }

  /* Modern scrollbar styling */
  ::-webkit-scrollbar {
    width: 10px;
  }

  ::-webkit-scrollbar-track {
    background: #021226;
  }

  ::-webkit-scrollbar-thumb {
    background: #4a5568;
    border-radius: 5px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #5a6578;
  }

  /* Smooth transitions for interactive elements */
  a, button {
    transition: all 0.3s ease;
  }

  /* Glassmorphism effect utility */
  .glass {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .section {
    min-height: 100vh !important;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-evenly;
  }
</style>

